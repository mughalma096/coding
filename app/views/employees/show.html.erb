<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header"><h2><%=@employee&.first_name %> Employee</h2></div>
      <div class="card-body">
        <div class="form-group">
          <table class="table">
            <tbody>
              <tr>
                <td>First Name:</td>
                <td><strong><%=@employee&.first_name %></strong></td>
              </tr>
              <tr>
                <td>Last Name:</td>
                <td><strong><%=@employee&.last_name %></strong></td>
              </tr>
              <tr>
                <td>Email:</td>
                <td><strong><%=@employee&.email %></strong></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_employee_path(@employee),class: 'btn btn-sm btn-warning' %> |
        <%= link_to 'Back', employees_path %>
      </div>
    </div>
  </div>
</div>

